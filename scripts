curl -sL https://deb.nodesource.com/setup_5.x | sudo -E bash -
sudo apt-get install -y nodejs
sudo apt-get update && sudo apt-get install -y build-essential g++ tmux make git


MongoDB
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv EA312927
echo "deb http://repo.mongodb.org/apt/ubuntu trusty/mongodb-org/3.2 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-3.2.list
sudo apt-get update
sudo apt--get install -y mongodb-org


npm install -g gulp
npm install -g forever


touch /etc/init/notes.conf
vi /etc/init/notes.conf
```
start on startup
stop on shutdown

expect fork

script
  PATH=/usr/bin/node:$PATH
  exec forever start /home/ubuntu/yis/server.js
end script

pre-stop script
  PATH=/usr/bin/node:$PATH
  exec forever stop /home/ubuntu/yis/server.js
end script
```

# import dataset for MongoDB to test
mongoimport --db yis --collection users --drop --file data/test_db.json 


